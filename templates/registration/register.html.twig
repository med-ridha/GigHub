{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.fullname, {
            label: 'Full Name'
        }) }}

        {{ form_row(registrationForm.age) }}
        {{ form_row(registrationForm.gender) }}
        {{ form_row(registrationForm.phonenumber, 
        {label: 'Phone Number'})
        }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.Freelancer, {
            label: 'Are you a freelancer?', required: false
        })}}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
{% endblock %}
