<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}GigHub{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <a href="{{ path('home') }}">Home</a>
                {% if app.user == null %}
                    <a href="{{ path('app_register') }}">Register</a>
                    <a href="{{ path('app_login') }}">Login</a>
                {% endif %}
                {% if app.user != null %}
                    <span> Welcome {{ app.user.getFullName() }} </span>
                    {% if app.user.getRoles()[0] == "ROLE_ADMIN" %}
                        <a href="{{ path('app_admin') }}">DashBoard</a>
                    {% endif %}
                    <a href="{{ path('app_gigs') }}">My Gigs</a>
                    <a href="{{ path('app_logout') }}">Logout</a>
                {% endif %}

            </nav>
        </header>
        <main>
            {% block body %}{% endblock %}
        </main>
        <footer>
            <p>&copy;COPYRIGHT 2023 GigHub</p>
        </footer>
    </body>
</html>
